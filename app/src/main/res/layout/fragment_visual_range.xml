<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.wsu.lar.airpact_fire.ui.fragment.algorithm.AlgorithmSelectFragment">

        <ImageView
            android:id="@+id/main_image_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@color/schemeTransparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/control_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_vertical_margin">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="What's the estimated visual range in this picture?"
                            android:textAlignment="viewStart"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:id="@+id/distance_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/target_distance_edit_text"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:ems="10"
                                    android:hint="Distance, e.g. 18.2"
                                    android:inputType="numberDecimal"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/metric_abbr"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:paddingBottom="5dp"
                                    android:text="KM"
                                    android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigation_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal">

                                <Button
                                    android:id="@+id/proceed_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:drawableRight="@mipmap/ic_trending_flat_black_24dp"
                                    android:text="Proceed"
                                    android:textSize="20sp" />
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
