        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="@dimen/sign_in_button_width" />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#7995A8"
                android:startColor="#E8E8E8"
                android:endColor="#000000"
                android:type="linear" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <size
                android:width="270dp"
                android:height="60dp" />
            <stroke
                android:width="3dp"
                android:color="#878787" />
        </shape>
